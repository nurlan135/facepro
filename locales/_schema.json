{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "FacePro Translation Schema",
    "type": "object",
    "required": [
        "$meta",
        "menu",
        "sidebar",
        "dashboard",
        "camera",
        "login",
        "settings",
        "errors"
    ],
    "properties": {
        "$meta": {
            "type": "object",
            "required": [
                "language",
                "name",
                "version"
            ],
            "properties": {
                "language": {
                    "type": "string",
                    "pattern": "^[a-z]{2}$"
                },
                "name": {
                    "type": "string"
                },
                "version": {
                    "type": "string"
                }
            }
        }
    }
}